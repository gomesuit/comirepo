doctype html
html lang="ja"
  head
    title = Settings.site.default.name
    = csrf_meta_tags
    = stylesheet_pack_tag 'adm/application'
  body.bg-light
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      = link_to Settings.site.default.name, admin_root_path, class: 'navbar-brand'
      button.navbar-toggler type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            = link_to 'Item', admin_items_path, class: 'nav-link'
          li.nav-item
            = link_to 'Category', admin_categories_path, class: 'nav-link'
          li.nav-item
            = link_to 'Label', admin_labels_path, class: 'nav-link'
          li.nav-item
            = link_to 'Author', admin_authors_path, class: 'nav-link'
          li.nav-item
            = link_to 'sidekiq', admin_sidekiq_web_path, class: 'nav-link'
    .container-fluid
      - if notice.present?
        .pt-3
        p.alert.alert-success = notice
      = yield
    = javascript_include_tag 'application'
    = javascript_pack_tag 'adm/application'
