/h1 Listing items

/.row
  - @items.each do |item|
    .col-2.p-1
      .card.p-2
        - if item.medium_image
          = image_tag item.large_image, class: 'card-img-top'
        - else
          = image_tag 'noimage_m.png', class: 'card-img-top'
        .card-body.p-1
          p.card-title.m-0 = item.title

- @days.each do |day|
  p.display-4 = day.strftime("%m/%d(#{%w(日 月 火 水 木 金 土)[day.wday]})")
  .card-columns
    - Item.where(publication_date: day).order(:title).each do |item|
      .card.p-2
        = link_to item_path item
          - if item.large_image
            = image_tag item.large_image, class: 'card-img-top'
          - else
            = image_tag 'noimage_m.png', class: 'card-img-top'
        .card-body.p-1
          p.card-title.m-0 = item.title
          p.card-title.m-0 = item.publication_date

/.card-columns
  - @items.each do |item|
    .card.p-2
      - if item.medium_image
        = image_tag item.large_image, class: 'card-img-top'
      - else
        = image_tag 'noimage_m.png', class: 'card-img-top'
      .card-body.p-1
        p.card-title.m-0 = item.title
        p.card-title.m-0 = item.publication_date
